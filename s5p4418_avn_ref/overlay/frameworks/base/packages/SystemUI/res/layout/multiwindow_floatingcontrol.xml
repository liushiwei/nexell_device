<com.android.systemui.statusbar.avn.FloatingWindowControlView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:systemui="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/multiwindow_drag_control_background"
    >

    <FrameLayout android:id="@+id/rot0"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:id="@+id/multiwindow_floatingcontrol"
            android:animateLayoutChanges="true"
            android:gravity="right"
            >
            <View
                android:layout_width="80px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="invisible"
                />
            <com.android.systemui.statusbar.policy.KeyButtonView android:id="@+id/multiwin_floating_sizeup"
                android:layout_width="40px"
                android:layout_height="match_parent"
                android:src="@drawable/ic_sysbar_floatingwindow_sizeup"
                systemui:keyCode="98"
                android:layout_weight="0"
                android:scaleType="center"
                android:contentDescription="@string/accessibility_floating_sizeup"
                />
            <View
                android:layout_width="8px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="invisible"
                />
            <com.android.systemui.statusbar.policy.KeyButtonView android:id="@+id/multiwin_floating_sizedown"
                android:layout_width="40px"
                android:layout_height="match_parent"
                android:src="@drawable/ic_sysbar_floatingwindow_sizedown"
                systemui:keyCode="99"
                android:layout_weight="0"
                android:scaleType="center"
                android:contentDescription="@string/accessibility_floating_sizedown"
                />
            <View
                android:layout_width="8px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="invisible"
                />
            <com.android.systemui.statusbar.policy.KeyButtonView android:id="@+id/multiwin_floating_docking"
                android:layout_width="40px"
                android:layout_height="match_parent"
                android:src="@drawable/ic_sysbar_floatingwindow_docking"
                systemui:keyCode="100"
                android:layout_weight="0"
                android:scaleType="center"
                android:contentDescription="@string/accessibility_floating_docking"
                />
            <View
                android:layout_width="8px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="invisible"
                />
            <com.android.systemui.statusbar.policy.KeyButtonView android:id="@+id/multiwin_floating_exit"
                android:layout_width="40px"
                android:layout_height="match_parent"
                android:src="@drawable/ic_sysbar_floatingwindow_exit"
                systemui:keyCode="101"
                android:layout_weight="0"
                android:scaleType="center"
                android:contentDescription="@string/accessibility_floating_exit"
                />
            <View
                android:layout_width="8px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="invisible"
                />
        </LinearLayout>

    </FrameLayout>

</com.android.systemui.statusbar.avn.FloatingWindowControlView>
